@page
@model LoginModel
<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Log in";
}

<div class="form-container">
    <p class="title">Login</p>
    <form id="loginForm" method="post" class="form">
        <div asp-validation-summary="ModelOnly" class="text-danger message" role="alert"></div>
        <div class="input-group">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="form-control form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="input-group">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" class="form-control form-input" autocomplete="current-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="forgot">
                <a href="~/Account/ForgotPassword">Forgot Password?</a>
            </div>
        </div>
        <button type="submit" class="sign">Log in</button>
    </form>
    <div class="social-message">
        <div class="line"></div>
        <p class="message">Login with social accounts</p>
        <div class="line"></div>
    </div>
    <div class="social-icons">
        @if (Model.ExternalLogins != null)
        {
            @foreach (var provider in Model.ExternalLogins)
            {
                <form asp-page="./ExternalLogin" asp-route-provider="@provider.Name" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-inline">
                    <button type="submit" class="icon" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-5 h-5 fill-current">
                            <!-- Icon path can be added here if needed -->
                        </svg>
                    </button>
                </form>
            }
        }
    </div>
    <p class="signup">Don't have an account? <a href="~/Account/Register" id="openRegister">Register</a></p>
</div>

