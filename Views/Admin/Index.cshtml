@model IEnumerable<_23210202037.Models.User>
@using System.Linq
<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Admin Paneli";
}

<h1>Admin Paneli</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@nameof(_23210202037.Models.User.UserName)</th>
            <th>@nameof(_23210202037.Models.User.Email)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Admin" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Admin" asp-action="Create" class="btn btn-primary">Create New</a>